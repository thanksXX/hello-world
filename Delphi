procedure TfrmV001Main.pgPage1CellChanged(Sender: TProfGrid; ACol,
  ARow: Integer; const OldText: WideString; var NewText: WideString;
  var AllowExit: Boolean);
  var
   rdXX:TRDXX;
begin
    rdXX := TRDXX(Sender.Objects[0,ARow]);
  case ACol of
 6:begin     //6表示下拉框所在的grid的列数
        if (ComboBox1.ItemIndex >-1) or (NewText='') then   //ItemIndex为-1时表示未选中任何项，默认为-1
           rdXX.X1:=NewText
        else
        rdXX.X1:=''
    end;
  end;
 end;

 procedure TfrmV001Main.pgPage1GetEditControl(Sender: TProfGrid;
  ACol, ARow: Integer; var AControl: TWinControl);
begin
  case ACol of
  6:AControl:=ComboBox1;   //选中第6列为ComboBox1项
  end;
end;




