       FContext.TABLE4.ClearRecords;
       FContext.TABLE4.Query.Reset;
       FContext.TABLE4.Query.Where.XX.Equal(rdTABLE4.XX);
       FContext.TABLE4.Query.And_.X.Equal(chr(ord('A')-1));
       ShowMessage(FContext.TABLE4.Query.SQL);
       FContext.TABLE4.FetchRecords;
       rdTABLE4:=FContext.TABLE4.First;
        
       
       FContext.TABLE3.ClearRecords;
       FContext.TABLE3.Params.Reset;    //Params：参数
       sysdate:=Trunc(FContext.CurrentDateTime);
       FContext.TABLE3.Params.FROM_DATE:=sysdate-DayOfTheWeek(sysdate)-7;  //取当前日期上上个周日
       FContext.TABLE3.Params.TO_DATE:=sysdate+(7-DayOfTheWeek(sysdate))-1;  //取当前日期下个周六（即最近2周）
       FContext.TABLE3.FetchRecords;
