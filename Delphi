procedure TfrmV001Main.ShowData;
begin 
  FContext.TABLE1.ClearRecords;
  FContext.TABLE1.Query.Where.XX.Equal('N');
  FContext.TABLE1.FetchRecords;
 
  FContext.TABLE2.ShowData(Self.pg2, TGTTABLE2_Disp, false);
  FContext.TABLE1.ShowData(Self.pg1, TGTTABLE1_Default, false);    //从中间层框架读取数据
end;
/////////////////////////////////////////////////////////////////////////////////////////////////////

procedure Tfrm001Main.InitializeControls;   //往ComboBox1添加表中不重复的、指定列的数据
var
  glbXX: TRDYYXX;  //定义数据库表记录集
 begin
  ComboBox1.Clear();  
  glbXX := FContext.YYXX.First;  //取数
  while glbXX <> nil do
  begin
    if ComboBox1.Items.IndexOf(IntToStr(glbXX.COLUMN1))=-1 then  //去重（chong）
      begin
      ComboBox1.AddItem(IntToStr(glbXX.COLUMN1), glbXX);   //若下拉框中无重复的指定数据，则添加此指定数据到下拉框中
      glbXX := FContext.YYXX.Next[glbXX];  
      end
    else
      glbXX := FContext.YYXX.Next[glbXX];   //若下拉框中有指定数据，则跳到下一条数据   
      ComboBox1.Sorted:=True;     //排序
  end;
 end;
