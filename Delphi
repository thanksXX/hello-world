procedure TfrmV001Main.SendEmailToXX;
begin
  if gblAB.CD.User='' then exit;
  FMailer.Reset;
  FMailer.SendTo:=gblAB.CD.User;
  FMailer.SendTo:=FMailer.SendTo +',XX@SB.COM';        //记得在收件人前面加逗号，谨记！
  FMailer.Subject :='系统出错'; 
  FMailer.Content.Add('');                             //空一行
  FMailer.Content.Add('Thanks');
  FMailer.Send;
  MessageDlg('更新出错,请联系XX!', mtInformation, [mbOK], 0);
end;
/////////////////////////////////////////////////////////////////////////////////////////////////////

procedure TfrmV001Main.btnJHClick(Sender: TObject);
  var
    strCommend: string;
    strSQL : string;
    rs:TDataSet;
begin
  strSQL:='SELECT JJJ.HHH_APPLICATION_PKG.GET_PROFILE(''YY'',''ZZ'') as FileCmd FROM DUAL'; //得到文件服务器地址
  rs := FXXContext.QueryResult(strSQL);
  if not rs.Eof then
  begin
    strCommend := rs.FieldByName('FileCmd').AsString;
    ShellExecute(Handle, 'open', PChar('explorer.exe'), PChar(strCommend),'',SW_SHOW); //浏览器上输入所得地址后进入服务器文件夹查看
  end;
end;
