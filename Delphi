procedure TfrmV001Main.pgPage1CellChanged(Sender: TProfGrid; ACol,
  ARow: Integer; const OldText: WideString; var NewText: WideString;
  var AllowExit: Boolean);
  var
   rdXX:TRDXX;
begin
    rdXX := TRDXX(Sender.Objects[0,ARow]);
  case ACol of
 6:begin     //6表示下拉框所在的grid的列数
        if (ComboBox1.ItemIndex >-1) or (NewText='') then   //ItemIndex为-1时表示未选中任何项，默认为-1
           rdXX.X1:=NewText
        else
        rdXX.X1:=''
    end;
  end;
 end;

 procedure TfrmV001Main.pgPage1GetEditControl(Sender: TProfGrid;
  ACol, ARow: Integer; var AControl: TWinControl);
begin
  case ACol of
  6:AControl:=ComboBox1;   //选中第6列为ComboBox1项
  end;
end;
/////////////////////////////////////////////////////////////////////////////////////////////////////

procedure TfrmV001Main.SendEmailToXX;
begin
  if gblAB.CD.User='' then exit;
  FMailer.Reset;
  FMailer.SendTo:=gblAB.CD.User;
  FMailer.SendTo:=FMailer.SendTo +',XX@SB.COM';        //记得在收件人前面加逗号，谨记！
  FMailer.Subject :='系统出错'; 
  FMailer.Content.Add('');                             //空一行
  FMailer.Content.Add('Thanks');
  FMailer.Send;
  MessageDlg('更新出错,请联系XX!', mtInformation, [mbOK], 0);
end;
/////////////////////////////////////////////////////////////////////////////////////////////////////

procedure TfrmV001Main.btnJHClick(Sender: TObject);
  var
    strCommend: string;
    strSQL : string;
    rs:TDataSet;
begin
  strSQL:='SELECT JJJ.HHH_APPLICATION_PKG.GET_PROFILE(''YY'',''ZZ'') as FileCmd FROM DUAL'; //得到文件服务器地址
  rs := FXXContext.QueryResult(strSQL);
  if not rs.Eof then
  begin
    strCommend := rs.FieldByName('FileCmd').AsString;
    ShellExecute(Handle, 'open', PChar('explorer.exe'), PChar(strCommend),'',SW_SHOW); //浏览器上输入所得地址后进入服务器文件夹查看
  end;
end;
