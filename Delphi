            begin
               ProfGrid2.Cells[pg2XX,i].Value:=ProfGrid2.Cells[pg2XX,i].Value + objTABLE3.XX + ',';
               objTABLE3:=FContext.TABLE3.Next[objTABLE3];
            end; 
          end;
          X1 := X2.X.Next[SA];
        end;
